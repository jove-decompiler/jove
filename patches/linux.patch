+      u##bits the_stuff[MAX_ARG_COUNT];                                        \
+      READ_ARGV_STUFF();                                                       \
+      READ_ARGV();                                                             \
+    }                                                                          \
+  args_done:                                                                   \
+    payload->str[pos & HALFMAXMASK] = '\0';                                    \
+    ++pos;                                                                     \
+    if (envp) {                                                                \
+      u##bits the_stuff[MAX_ENV_COUNT];                                        \
+      READ_ENVP_STUFF();                                                       \
+      READ_ENVP();                                                             \
+    }                                                                          \
