+      } else {                                                                 \
+        payload->str[pos & HALFMAXMASK] = '\0'; /* error */                    \
+        ++pos;                                                                 \
+      }                                                                        \
+      if (pos >= HALFMAXLEN)                                                   \
+        goto what_done##_done; /* overflow */                                  \
+    } else {                                                                   \
+      goto what_done##_done;                                                   \
+    }                                                                          \
+  } while (false);
